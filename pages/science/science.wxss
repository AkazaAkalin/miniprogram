.itemBox {
  padding-top: 26rpx;
  padding-bottom: 26rpx;
  margin: 0 auto 32rpx;
  /* height: 310rpx; */
  width: 660rpx;
  border-bottom: 4rpx solid #E7E7E7;
}
.item {
  width: 660rpx;
  margin: 0 auto;
  display: flex;
}
.itemTitle{
  overflow: hidden;
  width: 100%;
  font-size: 26rpx;
  color: #222;
  line-height: 45rpx;
  text-align: left;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  text-overflow: ellipsis;
  -webkit-box-orient: vertical;
  word-break: break-all
}
.itemPubTime{
  width: 100%;
  font-size: 22rpx;
  color: #B9BABA;
  /* line-height: 59rpx; */
  text-align: left;
}
.itemContent{
}
.itemInfo {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.itemImgBox {
  width: 260rpx;
  height: 160rpx;
  margin-right: 24rpx;
}
.itemImgBox image{
  width: 100%;
  height: 100%;
}
.itemText {
  /* width: 510rpx; */
  /* margin-top: 20rpx; */
  font-size: 22rpx;
  color: #999;
  text-align: left;
  line-height: 40rpx;
  display: -webkit-box;  /*设置为弹性盒子*/
  -webkit-line-clamp: 1;  /*最多显示3行*/
  overflow: hidden;  /*超出隐藏*/
  text-overflow: ellipsis;  /*超出显示为省略号*/
  -webkit-box-orient: vertical;
  word-break: break-all;  /*强制英文单词自动换行*/
}